---
import Layout from '../layouts/Layout.astro';
import cfp from '../data/cfp.json';
import edition from '../data/edition.json';
import { t } from "../i18n/i18n";
import CFPDates from '../components/CFPDates.astro';
import SponsorsLogosSection from '../components/SponsorsLogosSection.astro';

const lang = (Astro.locals as any).lang;
---
<Layout title="Snowcamp">
<main>
  <section>
	<div class="snc-banner">
	  <div class="snc-banner-style">
		<div class="snc-inner">
		  <div class="container">
			<div class="row">
			  <div class="col-xs-12">
				<div class="banner-info">
				  <div class="snc-countdown-area">
					<div id="snc-countdown" data-date={ edition.count_down }>
					  <span class="snc-days"><b id="cd-days">&nbsp;</b> <i> Jours </i></span>
					  <span class="snc-hr"><b id="cd-hours">&nbsp;</b> <i> Heures </i></span>
					  <span class="snc-min"><b id="cd-min">&nbsp;</b> <i> Minutes </i></span>
					  <span class="snc-sec"><b id="cd-sec">&nbsp;</b> <i> Secondes </i></span>
					</div>
				  </div>
				  <h2 class="title">Snowcamp <span>{ edition.year }</span></h2>
				  <h3 class="date"><span>{ (edition.dates as any)[lang] } </span>&nbsp;{ edition.year }, Grenoble</h3>
				</div>
			  </div>
			</div>
		  </div>
		</div>
	  </div>
	</div>
  </section>  
  <section>
	<div id="snc-snowcamp" class="snc-snowcamp">
	  <div class="snc-inner">
		<div class="container">
		  <div class="row">
			<div class="col-xs-12">
			  <div class="snc-heading-area">
				<h2 class="snc-heading">
				  <span class="back-heading">
					  <i class="fa fa-snowflake-o" aria-hidden="true"></i>
				  </span>
				  <span class="heading">Snowcamp</span>
				</h2>
				<p class="text">{t('conference_desc')}</p>
			  </div>
			</div>
		  </div>
		  <div class="row">
			<div class="col-xs-12 col-sm-6 col-md-4">
			  <div class="single">
				<img src="/img/icon-univ.png" alt="universities" width="30%">
				<h3 class="title" set:html={t('universities_title')}></h3>
				<p class="info" set:html={t('universities_desc')}></p>
			  </div>
			</div>
			<div class="col-xs-12 col-sm-6 col-md-4">
			  <div class="single">
				<img src="/img/icon-conf.png" alt="conference" width="30%">
				<h3 class="title" set:html={t('conference_title')}></h3>
				<p class="info" set:html={t('conference_desc')}></p>
			  </div>
			</div>
			<div class="col-xs-12 col-sm-6 col-md-4">
			  <div class="single">
				<img src="/img/icon-unconference.webp" alt="unconference" width="30%">
				<h3 class="title" set:html={t('unconference_title')}></h3>
				<p class="info" set:html={t('unconference_desc')}></p>
			  </div>
			</div>
		  </div>
		</div>
	  </div>
	</div>
  </section>
  
  <section>
	<div id="snc-innovation" class="snc-innovation">
	  <div class="snc-inner">
		<div class="container">
		  <div class="row">
			<div class="col-xs-12">
			  <div class="snc-heading-area">
				<h2 class="snc-heading">
				  <span class="back-heading">
					  <i class="fa fa-cogs" aria-hidden="true"></i>
				  </span>
				  <span class="heading" set:html={t('innovation_research_title')}></span>
				</h2>
				<p class="text" set:html={t('innovation_research_desc')}></p>
			  </div>
			</div>
		  </div>
		  <div class="row">
			<div class="col-xs-12 col-sm-6 col-md-4">
			  <div class="single">
				<img src="/img/icon-dev.png" alt="dev" width="30%">
				<h3 class="title" set:html={t('innovation_title')}></h3>
				<p class="info" set:html={t('innovation_desc')}></p>
			  </div>
			</div>
			<div class="col-xs-12 col-sm-6 col-md-4">
			  <div class="single">
				<img src="/img/icon-cloud.png" alt="conference" width="30%">
				<h3 class="title" set:html={t('discussion_title')}></h3>
				<p class="info" set:html={t('discussion_desc')}></p>
			  </div>
			</div>
			<div class="col-xs-12 col-sm-6 col-md-4">
			  <div class="single">
				<img src="/img/icon-academic.png" alt="unconference" width="30%">
				<h3 class="title" set:html={t('research_title')}></h3>
				<p class="info" set:html={t('research_desc')}></p>
			  </div>
			</div>
		  </div>
		</div>
	  </div>
	</div>
  </section>
  
  <section>
  { cfp.status !== "published" &&
	<div id="program" class="snc-programme">
	  <div class="snc-inner">
		<div class="container">
		  <div class="row">
			<div class="col-xs-12">
			  <div class="snc-heading-area">
				<h2 class="snc-heading">
				  <span class="back-heading">
					<i class="fa fa-calendar" aria-hidden="true"></i>
				  </span>
				  <span class="heading">{t('cfp_program_translation')}</span>
				</h2>
				{ cfp.status !== "not_open" && <CFPDates></CFPDates> }
			  </div>
			</div>
		  </div>
		  <div class="row">
			<div class="col-xs-12 col-sm-6 col-md-6">
			  <div class="single">
				<img src="/img/themas.webp" alt="themas">
			  </div>
			</div>
			<div class="col-xs-12 col-sm-6 col-md-6">
			  <div class="single">
				{cfp.status === "open" ? <span set:html={t('cfp_open_desc')}></span> : ''}
				{cfp.status === "opens_soon" ? <span set:html={t('cfp_open_soon_desc')}></span> : ''}
				{cfp.status === "closed" ? <span set:html={t('cfp_closed_desc')}></span> : ''}
				{cfp.status === "not_open" || cfp.status === "published" ? <span set:html={t('cfp_other_desc')}></span> : ''}
			  </div>
			</div>
		  </div>
		</div>
	  </div>
	</div>
	}
	{ cfp.status === "published" &&
	<div id="program" class="snc-programme">
	  <div class="snc-inner">
		<div class="container">
		  <div class="row">
			<div class="col-xs-12">
			  <div class="snc-heading-area">
				<h2 class="snc-heading">
				  <span class="back-heading">
					  <i class="fa fa-calendar" aria-hidden="true"></i>
				  </span>
				  <span class="heading">{t('schedule_title')}</span>
				</h2>
				</div>
			  </div>
			</div>
			<div class="row">
			  <p>{t('schedule_desc')}
				<a id="sched-embed" href={cfp.url} data-sched-sidebar="no">SnowCamp {cfp.year}</a>
			  </p>
			</div>
		  </div>
		</div>
	  </div>
	</div>
	}
  </section>
  <section>
  	<SponsorsLogosSection></SponsorsLogosSection>
  </section>
  <section>
	<div id="venue" class="snc-venue">
	  <div class="snc-inner">
		<div class="container">
		  <div class="row">
			<div class="col-xs-12">
			  <div class="snc-heading-area">
				<h2 class="snc-heading">
				  <span class="back-heading">
					  <i class="fa fa-map-o" aria-hidden="true"></i>
				  </span>
				  <span class="heading">{t('venue_title')}</span>
				</h2>
				<p class="text" set:html={t('venue_desc')}></p>
			  </div>
			</div>
		  </div>
		  <div class="row">
			<div class="col-xs-12 col-sm-6 col-md-6 polaroid-images">
			  <div class="single">
				<a href="http://www.congres-wtcgrenoble.com/fr/annuaire-geolocalise?field_service_tid%5B%5D=73&field_service_tid%5B%5D=69&field_service_tid%5B%5D=68&field_service_tid%5B%5D=70" target="_blank" class="rot-4" title="WTC Grenoble">
				  <img src="/img/wtc.webp" alt="WTC Grenoble" width="40%">
				</a>
			  </div>
			</div>
			<div class="col-xs-12 col-sm-6 col-md-6">
			  <div class="single">
				<p set:html={t('venue_location')}></p>
				<br/>
				<p><strong>5 - 7 , place Robert Schuman<br/>38025 Grenoble</strong></p>
				<br/>
				<p set:html={t('venue_access')}></p>
			  </div>
			</div>
		  </div>
		  <div class="row">
			<div class="col-xs-12 col-sm-6 col-md-6">
			  <div class="single">
				<p><strong>Latitude :</strong> 45.191113</p>
				<p><strong>Longitude :</strong> 5.712145</p>
			  </div>
			  <div class="single">
				<iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2811.812207884478!2d5.711009615420941!3d45.190897559659334!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x478af481b7661f97%3A0x2f475fe8d95f61e0!2sCentre+de+congr%C3%A8s+du+World+Trade+Center+Grenoble!5e0!3m2!1sfr!2sfr!4v1555137908940!5m2!1sfr!2sfr" width="500" height="400" frameborder="0" style="border:0" allowfullscreen></iframe>
			  </div>
			  <div class="single polaroid-images">
				<a href="#" target="_blank" class="rot-4" title="WTC - Atrium (Crédit photo WTC)">
				  <img src="/img/wtc-atrium.jpg" alt="WTC - Atrium (Crédit photo WTC)" width="40%">
				</a>
			  </div>
			</div>
			<div class="col-xs-12 col-sm-6 col-md-6 polaroid-images">
			  <div class="single">
				<a href="http://www.congres-wtcgrenoble.com/sites/default/files/PLAN%20ACCES%20GENERAL.pdf" target="_blank" class="rot4" title="WTC - Plan d'accès">
				  <img src="/img/wtc-access-fr.webp" alt="WTC, Centre de Congrès de Grenoble" width="30%">
				</a>
			  </div>
			</div>
		  </div>
		</div>
	  </div>
	</div>
  </section>
</main>
<script is:inline src="/js/homepage.js"></script>
</Layout>